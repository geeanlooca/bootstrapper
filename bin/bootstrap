echo 'Updating the package list and upgrading the system...'
sudo pacman -Syu --noconfirm

echo 'Installing make and ansible...'
sudo pacman -S make ansible --noconfirm

echo 'Installing AUR module for ansible'

TARGET="~/.ansible/plugins/modules/aur"
if [ ! -d "$TARGET" ] ; then
    git clone https://github.com/kewlfft/ansible-aur.git $TARGET
fi

echo $USER
